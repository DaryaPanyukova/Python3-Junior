kol=int(input("Введите кол-во учеников в классе "))
s1=0
s2=0
k1=0
k2=0
for s in range(kol):
    d=int(input("Введите рост ученика"))
    if d<0:
        s1=s1+d
        k1=k1+1
    else:
        s2=s2+d
        k2=k2+1
if k1==0:
    print("Мальчиков в классе нет ")
else:
    print("Средний рост мальчиков в классе ",s1/k1)
if k2==0:
    print("Девочек в классе нет ")
else:
    print("Средний рост девочек в классе ",s2/k2)
